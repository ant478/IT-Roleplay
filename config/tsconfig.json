{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "moduleResolution": "Node",
    "jsx": "preserve",
    "target": "ESNext",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [
    "../frontend/**/*.ts",
    "../frontend/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
